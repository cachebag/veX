%gcc
%cpp -std=c++17

# SFML Headers for both platforms
# Detect platform and add correct include paths
%if uname == "Linux"
-I/usr/include
-L/usr/lib/x86_64-linux-gnu
-lsfml-graphics
-lsfml-window
-lsfml-system
-lsfml-audio
-lsfml-network
%endif

%if uname == "Darwin"
-I/opt/homebrew/opt/sfml/include
-L/opt/homebrew/opt/sfml/lib
-lsfml-graphics
-lsfml-window
-lsfml-system
-lsfml-audio
-lsfml-network
%endif

